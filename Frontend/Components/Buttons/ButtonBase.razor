
@code {
    [Parameter]
    public bool IsDisabled { get; set; } = false;

    [Parameter]
    public bool StopPropagation { get; set; } = false;

    [Parameter]
    public string AdditionalClasses { get; set; } = string.Empty;

    [Parameter]
    public bool IsNotOutline { get; set; } = false;

    [Parameter]
    public ButtonSizes ButtonSize { get; set; } = ButtonSizes.Medium;

    protected string GetButtonSizeClass() => ButtonSize == ButtonSizes.Small ? "btn-sm" :
        ButtonSize == ButtonSizes.Large ? "btn-lg" : "";
}
