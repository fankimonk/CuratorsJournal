@inherits PageBase

@code {
    protected int? _groupId = null;
    protected string _studentsRefPageUri = "/Students";

    protected int? _idToDelete = null;
    protected bool _isDeleteModalVisible = false;

    protected bool _isServerErrorAlertVisible = false;
    protected string? _errorMessage = "";

    protected string GetStudentsRefPageUri() => _groupId == null ? _studentsRefPageUri : _studentsRefPageUri + $"/?GroupId={_groupId}";

    protected void CloseDeleteModal()
    {
        _isDeleteModalVisible = false;
        _idToDelete = null;
    }

    protected void OpenDeleteModal(int? idToDelete = null)
    {
        _idToDelete = idToDelete;
        _isDeleteModalVisible = true;
    }

    protected void CloseServerErrorAlert()
    {
        _isServerErrorAlertVisible = false;
        _errorMessage = "";
    }

    protected void ShowServerErrorAlert(string? errorMessage)
    {
        _errorMessage = errorMessage;
        _isServerErrorAlertVisible = true;
    }
}
